<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    >


    <TextView
        android:id="@+id/Xtest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="40px"
        android:text="X"/>
    <TextView
        android:id="@+id/Ytest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="40px"
        android:text="Y"/>
    <TextView
        android:id="@+id/Ztest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="40px"
        android:text="Z"/>




    <TextView
        android:id="@+id/filterX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="40px"
        android:text="XFilter:"/>
    <TextView
        android:id="@+id/YFiltertest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="40px"
        android:text="Y Filter:"/>
    <TextView
        android:id="@+id/ZFiltertest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="40px"
        android:text="Z Filter:"/>

</LinearLayout>